<div class="container-fluid">
  <div class="flex2">
    <h2>Log in</h2>

    <div class="form-horizontal col-8 pt-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :email, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, placeholder:"Enter email", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class:"col-sm-3 col-form-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, placeholder:"Enter password", class:"form-control" %>
            <% if @minimum_password_length %>
              <small>(<%= @minimum_password_length %> characters minimum)</small>
            <% end %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row justify-content-sm-end">
            <div class="col-9">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="actions row justify-content-sm-center">
          <div class="col-sm-3">
            <%= f.submit "Log in", class:"btn btn-light" %>
          </div>
        </div>
      <% end %>

      <div class="row justify-content-sm-end pt-4">
        <div class="col-sm-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
</div>
