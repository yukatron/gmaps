<div class="container-fluid">
	<div class="main-visual">
		<p class="main-visual-title">
			Practice Gmaps
		</p>
		<p class="main-visual-subtitle">
			practice using Google Map API
		</p>
	</div>

	<div class="flex2">
		<h2>New Map</h2>

		<div class="form-horizontal col-8 pt-4">
			<%= form_for(@map) do |f| %>

				<% if @map.errors.any? %>
					<div id="error_explanation">
						<h4><%= @map.errors.count %>件のエラーが発生しました</h4>
						<ul>
							<% @map.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<div class="form-group row">
					<%= f.label :name, class:"col-sm-2 col-form-label" %>
					<%= f.text_field :name, class:"form-control col-5" %>
				</div>

				<div class="form-group row">
					<%= f.label :address, class:"col-sm-2 col-form-label" %>
					<%= f.text_field :address, autofocus: true, id:"address", class:"form-control col-10" %>
				</div>

				<div class="actions">
					<%= f.submit 'save', class:"btn btn-info col-3 float-right" %>
				</div>

			<% end %>
		</div>
	</div>

	<div class="flex">
		<h2>Maps List</h2>

		<div class="maps row">
			<% @maps.each do |map| %>
				<div class="map-list-item col-4">
					<i class="fas fa-map-pin icon"></i>
					<%= link_to map.name, map_path(map.id), class:"maps-list-items" %>
				</div>
			<% end %>
		</div>
	</div>

	<div class="flex2">
		<h2>Reference Sites</h2>

	</div>

</div>