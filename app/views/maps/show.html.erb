<div class="container-fluid">
	<div class="flex">
		<h1>GMap</h1>

		<div class="address">
			<p>name: <%= @map.name %><br>
				address: <span id="address"><%= @map.address %></span><br>
				lat: <%= @map.latitude %><br>
				lng: <%= @map.longitude %>
			</p>
		</div>

		<div class="map-box">
			<div id="map"></div>
		</div>

		<div><%= link_to '削除', map_path(@map.id), method: :delete %> | <%= link_to '戻る', root_path %></div>
		</div>

	</div>
</div>


<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>